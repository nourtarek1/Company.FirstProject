@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details Page</h1>

<br />
<br />

<form asp-action="Edit">
    <div class="row g-3">
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Name" class="form-control" />
                <label asp-for="Name" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Age" class="form-control" />
                <label asp-for="Age" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Email" class="form-control" />
                <label asp-for="Email" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Adress" class="form-control" />
                <label asp-for="Adress" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Phone" class="form-control" />
                <label asp-for="Phone" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="Salary" class="form-control" />
                <label asp-for="Salary" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="HiringDate" class="form-control" />
                <label asp-for="HiringDate" class="col-form-label"></label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating">
                <input readonly asp-for="CreateAt" class="form-control" />
                <label asp-for="CreateAt" class="col-form-label"></label>
            </div>
        </div>

        <div class="form-check form-check-inline">
            <input readonly class="form-check-input" type="checkbox" id="inlineCheckbox1" asp-for="IsActive">
            <label class="form-check-label" asp-for="IsActive" for="inlineCheckbox1"></label>
        </div>
        <div class="form-check form-check-inline">
            <input readonly class="form-check-input" type="checkbox" id="inlineCheckbox1">
            <label class="form-check-label" asp-for="IsDeleted" for="inlineCheckbox1"></label>
        </div>
        <div class="my-3">

            <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Employee" class="btn btn-warning">Edit</a>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
        </div>

    </div>

</form>

